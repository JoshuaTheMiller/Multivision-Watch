<layout id="WatchFace">	
    <drawable id="Background" class="Background">
    	<param name="topColor">0xFF0055</param>
    	<param name="bottomColor">0xFF5500</param>
    </drawable>

   	<label id="TimeDisplay_Top" x="center" y="center" font="@Fonts.timeFont_Top" justification="Gfx.TEXT_JUSTIFY_CENTER" color="0xFF5500" />
    <label id="TimeDisplay_Bottom" x="center" y="center" font="@Fonts.timeFont_Bottom" justification="Gfx.TEXT_JUSTIFY_CENTER" color="0xFF0055" /> 
    
     <drawable id="BatteryTextBlock" class="TextBlockBackground">     	      	          
        <param name="backgroundColor">0x00AAFF</param>                
        <param name="xAnchor">Left</param>      
        <param name="xOffset">-10</param>        
    </drawable>   
    
     <drawable id="GoalPercentTextBlock" class="TextBlockBackground">     	      	          
        <param name="backgroundColor">0x5500AA</param>
        <param name="xAnchor">Right</param>                
        <param name="xOffset">10</param>               
    </drawable>    
    
    <label id="BatteryDisplay" text="00" x="left" y="center" font="@Fonts.smallFont" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE" />
    <label id="HeartrateDisplay" text="000" x="68" y="top" font="@Fonts.smallFont" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE" />    
    <label id="StepGoalDisplay" text="00000" x="right" y="center" font="@Fonts.smallFont" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE" />
    <label id="StepCountDisplay" text="00000" x="center" y="bottom" font="@Fonts.smallFont" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE" />      
    <label id="NotificationCountDisplay" text="+00" x="137" y="top" font="@Fonts.smallFont" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE" />
    
    <label id="DatePlaceholder" font="@Fonts.smallFont" />   
    
   	<drawable id="DateDisplay" class="DateControl">
    	<param name="text">"00/00/00"</param>
    	<param name="font">Rez.Fonts.smallFont</param>      	           
        <param name="color">Gfx.COLOR_WHITE</param>
        <param name="justification">Gfx.TEXT_JUSTIFY_CENTER</param>
        <param name="offsetYFromCenter">30</param>        
    </drawable>     
    
    <drawable id="BatteryBarDisplay" class="RectangleBar">
     	<param name="percent">1</param>      	           
        <param name="color">0x00AAFF</param>
        <param name="xOffsetFromSide">1</param>
        <param name="orientation">0</param>
    </drawable>
            
    <drawable id="GoalPercentBarDisplay" class="RectangleBar">
     	<param name="percent">1</param>      	             
        <param name="color">0x5500AA</param>
        <param name="xOffsetFromSide">1</param>
        <param name="orientation">1</param>
    </drawable>    
</layout>